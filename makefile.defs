MAKE = make
CC = gcc
CXX = g++
CFLAGS = -Wall -lm
CXXFLAGS = -Wall -lm
OPTFLAGS = -O3
#DEBUG = -g
OTHERLIBS = ../
INCFLAGS = -I../lib -I$(OTHERLIBS)
LINKFLAGS = -L../lib -lpcasso
BINDIR = ../bin
ifeq ($(shell uname -o 2>/dev/null), Cygwin)
	LIBEXT=dll
	LIBFLAGS = -shared -I$(OTHERLIBS)
else
	LIBEXT=so
	LIBFLAGS = -fpic -shared -I$(OTHERLIBS)
endif
